{
  "graphite_url": "http://10.77.96.122:8085",
  "public_graphite_url": "http://graphite.itczl.com",
  "interval": "15minute",
  "logging": "debug",
  "prefix": "[ITCZL Alert]",

  "normal_handlers": ["http"],
  "warning_handlers": ["http"],
  "critical_handlers": ["http"],

  "http": {
      "url": "http://10.77.96.56:8762",
      "method": "POST"
  },

  "debug": true,

  "alerts": [
    {
      "name": "main_feed_qps",
      "query": "itczl.access.qps.uve-service-main_feed",
      "source": "graphite",
      "method": "average",
      "interval": "10minute",
      "no_data": "warning",
      "history_size": "15day",
      "rules": [
        "warning: < 150",
        "warning: > 5000",
        "critical: > 16000"
      ]
    },
    {
      "name": "main_feed_response_time",
      "query": "itczl.access.response_time.uve-service-main_feed.mean",
      "source": "graphite",
      "method": "average",
      "interval": "10minute",
      "no_data": "warning",
      "history_size": "15day",
      "rules": [
        "warning: < 25",
        "critical: < 10",
        "warning: > 130",
        "critical: > 155"
      ]
    }
  ]
}
